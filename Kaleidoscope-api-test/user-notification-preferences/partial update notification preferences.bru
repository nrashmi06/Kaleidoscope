meta {
  name: partial update notification preferences
  type: http
  seq: 4
}

patch {
  url: {{base_url}}/api/user-notification-preferences
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{accessToken}}
  Content-Type: application/json
}

body:json {
  {
    "likesEmail": true,
    "commentsPush": false
  }
}

tests {
  test("Status code is 200", function () {
    expect(res.getStatus()).to.equal(200);
  });

  test("Response has success true", function () {
    expect(res.getBody().success).to.equal(true);
  });

  test("Partial fields updated", function () {
    const data = res.getBody().data;
    expect(data.likesEmail).to.equal(true);
    expect(data.commentsPush).to.equal(false);
  });
}


