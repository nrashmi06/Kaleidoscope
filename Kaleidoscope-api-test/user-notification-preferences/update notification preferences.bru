meta {
  name: update notification preferences
  type: http
  seq: 3
}

put {
  url: {{base_url}}/api/user-notification-preferences
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{accessToken}}
  Content-Type: application/json
}

body:json {
  {
    "likesEmail": true,
    "likesPush": true,
    "commentsEmail": true,
    "commentsPush": false,
    "followsEmail": true,
    "followsPush": true,
    "mentionsEmail": true,
    "mentionsPush": false,
    "systemEmail": true,
    "systemPush": true,
    "followRequestPush": true,
    "followAcceptPush": true
  }
}

tests {
  test("Status code is 200", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response has success true", function () {
    expect(res.getBody().success).to.equal(true);
  });
  
  test("Notification preferences updated successfully", function () {
    const data = res.getBody().data;
    expect(data.commentsEmail).to.equal(true);
    expect(data.commentsPush).to.equal(false);
  });
}
